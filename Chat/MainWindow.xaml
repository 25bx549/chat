<Window x:Class="Chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF47BFF3">
        <RadioButton Content="TCP" HorizontalAlignment="Left" Margin="67,87,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
        <RadioButton Content="UDP" HorizontalAlignment="Left" Margin="67,111,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="400,111,0,0" TextWrapping="Wrap" Text="&lt;type message here&gt;" VerticalAlignment="Top" Width="340"/>
        <CheckBox Content="Run as tcp Client" HorizontalAlignment="Left" Margin="151,88,0,0" VerticalAlignment="Top"/>
        <CheckBox Content="Run as tcp Server" HorizontalAlignment="Left" Margin="151,111,0,0" VerticalAlignment="Top"/>
        <Button Content="Click To Send" HorizontalAlignment="Left" Margin="570,152,0,0" VerticalAlignment="Top" Width="126"/>
        <TextBlock HorizontalAlignment="Left" Margin="67,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="191" Width="646" Background="#FFFBF6F6"/>
        <Label Content="Chat Log" HorizontalAlignment="Left" Margin="67,161,0,0" VerticalAlignment="Top" Width="245"/>
        <Label Content="TCP Connection State" HorizontalAlignment="Left" Margin="67,22,0,0" VerticalAlignment="Top" Width="183" FontWeight="Bold"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="236,25,0,0" VerticalAlignment="Top" Width="93"/>
    </Grid>
</Window>
